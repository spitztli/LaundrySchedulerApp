<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LaundrySchedulerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LaundrySchedulerApp"
    Shell.FlyoutBehavior="Disabled"
    Title="LaundrySchedulerApp">

    <!-- Definiere die MainPage als Startseite -->
    <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage"/>

    <!-- Definiere die SignUpPage -->
    <ShellContent Title="Sign Up" ContentTemplate="{DataTemplate local:SignUpPage}" Route="SignUpPage"/>

</Shell>
